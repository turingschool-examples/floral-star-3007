<h1>Mechanic Information</h1>

<p>Name: <%= @mechanic.name %></p>
<p>Experience: <%= @mechanic.years_experience %></p>

<h4>Rides:</h4>
<% @mechanic.open_rides_order.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<p>Add Ride</p>
<%= form_with url:"/mechanics/#{@mechanic.id}/mechanic_rides", local: true do |form| %>
  <%= form.label :ride_id %>
  <%= form.number_field :ride_id %>
  <%= form.submit "Submit" %>
<% end %>
