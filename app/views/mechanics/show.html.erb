<h3>Mechanic: <%= @mechanic.name %></h3>
<p>Years of Experience: <%= @mechanic.years_experience %></p>

<h3>Current rides they're working on:</h3>
<ul>
  <% @mechanic.rides.currently_open_by_thrill.each do |ride| %>
    <li><%= ride.name %></li>
  <% end %>
</ul>

<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |form| %>
  <%= form.label        :ride_id %>
  <%= form.number_field :ride_id %>
  <%= form.submit       'Add ride by id' %>
<% end %>
