<h1><%= @mechanic.name %></h1>
<p>Years of experience: <%= @mechanic.experience %></p>

<h3>Rides</h3>
<ul>
  <% @mechanic.working_on.each do |ride| %>
    <li><%= ride.name %></li>
  <% end %>
</ul>

<h2>Add a ride to workload</h2>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, local: true do |form| %>
  <%= form.label :ride_id %>
  <%= form.text_field :ride_id %>
  <%= form.submit "Submit" %>
<% end %>