<h3>Mechanic: <%= @mechanic.name %></h3>
<p>Years of Experience: <%= @mechanic.years_experience %></p>
<ul>Current Rides: <% @mechanic_rides.each do |ride| %>
  <li><%= ride.name %></li>
  <% end %></ul>

<%= form_with url: mechanic_rides_path, method: :post, params: {mechanic_id: @mechanic.id}, local: true do |f| %>
  <%= f.label :ride_id, "Add a ride to workload:" %>
  <%= f.number_field :ride_id %>
  <%= f.hidden_field :mechanic_id, value: @mechanic.id %>
  <%= f.submit "submit" %>
<% end %>
